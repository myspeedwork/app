{
    "name": "speedwork/app",
    "type": "application",
    "description": "A Speedwork Application",
    "license": "MIT",
    "authors": [{
        "name": "sankar",
        "email": "sankar.suda@gmail.com"
    }],
    "minimum-stability": "dev",
    "config": {
        "no-dev": true,
        "optimize-autoloader": true
    },
    "autoload": {
        "psr-4": {
            "System\\": "system/"
        }
    },
    "require": {
        "php": ">=5.5",
        "speedwork/framework": "dev-master",
        "smarty/smarty": "~3.1",
        "speedwork/theme-starter": "dev-master",
        "speedwork/theme-speed": "dev-master"
    },
    "suggests": {
        "willdurand/geocoder": "~v3",
        "geoip2/geoip2": "~v2",
        "speedwork/cache": "dev-master",
        "monolog/monolog": "^1.17"
    },
    "scripts": {
        "post-install-cmd": [
            "composer dump-autoload --optimize"
        ],
        "post-update-cmd": [
            "composer dump-autoload --optimize"
        ],
        "post-create-project-cmd": [
            "php -r \"copy('.env.example', '.env');\""
        ]
    }
}
